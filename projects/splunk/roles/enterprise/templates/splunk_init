#!/bin/sh
#
# /etc/init.d/splunk-{{ splunk_role }}
# init script for Splunk.
# generated by 'Jay Slay....and ansible'
#
# chkconfig: 2345 90 60
# description: Splunk {{ splunk_role }} service
#
RETVAL=0

. /etc/init.d/functions

splunk_start() {
  echo Starting Splunk...
  "{{ splunk_home }}/bin/splunk" start --no-prompt --answer-yes
  RETVAL=$?
  [ $RETVAL -eq 0 ] && touch /var/lock/subsys/splunk-{{ splunk_role }}
}
splunk_stop() {
  echo Stopping Splunk...
  "{{ splunk_home }}/bin/splunk" stop 
  RETVAL=$?
  [ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/splunk-{{ splunk_role }}
}
splunk_restart() {
  echo Restarting Splunk...
  "{{ splunk_home }}/bin/splunk" restart 
  RETVAL=$?
  [ $RETVAL -eq 0 ] && touch /var/lock/subsys/splunk-{{ splunk_role }}
}
splunk_status() {
  echo Splunk status:
  "{{ splunk_home }}/bin/splunk" status 
  RETVAL=$?
}
case "$1" in
  start)
    splunk_start
    ;;
  stop)
    splunk_stop
    ;;
  restart)
    splunk_restart
    ;;
  status)
    splunk_status
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|status}"
    exit 1
    ;;
esac

exit $RETVAL
