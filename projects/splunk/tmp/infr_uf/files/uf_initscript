#!/bin/sh
#
# /etc/init.d/splunkuf
# init script for Splunk.
# generated by 'splunk enable boot-start'.
#
# chkconfig: 2345 90 60
# description: Splunk uf service
#
RETVAL=0

. /etc/init.d/functions

splunk_start() {
  echo Starting Splunk...
  "/opt/splunk/uf/bin/splunk" start --no-prompt --answer-yes
  RETVAL=$?
  [ $RETVAL -eq 0 ] && touch /var/lock/subsys/splunkuf
}
splunk_stop() {
  echo Stopping Splunk...
  "/opt/splunk/uf/bin/splunk" stop 
  RETVAL=$?
  [ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/splunkuf
}
splunk_restart() {
  echo Restarting Splunk...
  "/opt/splunk/uf/bin/splunk" restart 
  RETVAL=$?
  [ $RETVAL -eq 0 ] && touch /var/lock/subsys/splunkuf
}
splunk_status() {
  echo Splunk status:
  "/opt/splunk/uf/bin/splunk" status 
  RETVAL=$?
}
case "$1" in
  start)
    splunk_start
    ;;
  stop)
    splunk_stop
    ;;
  restart)
    splunk_restart
    ;;
  status)
    splunk_status
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|status}"
    exit 1
    ;;
esac

exit $RETVAL
